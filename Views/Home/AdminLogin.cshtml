    <div class="page-section">

        <div class="container-fluid mt-4">
            <div class="row">
                <div class="col-lg-6 mb-5 mb-lg-0" style="padding: 12px; box-shadow: 2px 2px 10px grey; border-radius: 6px;">
 
                    <form asp-action="AdminLogin" method="post" class="form">

                        <div id="login-form">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="row form-group">
                                <div class="col-md-12">
                                    <label class="text-black" for="email">Email</label>
                                    <input type="email" asp-for="Email" id="login-email" class="form-control">
                                </div>
                            </div>

                            <div class="row form-group">
                                <div class="col-md-12">
                                    <label class="text-black" for="password">Password</label>
                                    <input type="password" asp-for="Password" id="login-password" class="form-control">
                                </div>
                            </div>

                            <div class="row form-group mt-4">
                                <div class="col-md-12">
                                        <h style="color:red">@Html.ValidationSummary(true)</h> 
                                    <input type="submit" value="Login" class="btn btn-secondary">

                                </div>
                            </div>
                        </div>
                    </form>


                </div>
            </div>
        </div>
    </div>

    <footer class="page-footer bg-image" style="background-image: url(../img/world_pattern.svg);">
        <div class="container">
            <div class="row mb-5">
