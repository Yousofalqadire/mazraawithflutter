                </div>
            </div>

            <p class="text-center" id="copyright">Copyright &copy; 2022 Mazaare3, Powred by <a href="#" target="_blank">DAS software solutions</a></p>
        </div>
    </footer>

    <script src="../js/jquery-3.5.1.min.js"></script>

    <script src="../js/bootstrap.bundle.min.js"></script>

    <script src="../js/google-maps.js"></script>

    <script src="../vendor/wow/wow.min.js"></script>

    <script src="../js/theme.js"></script>

    <script>
        $("#topHead").addClass("bg-green");
        $("#register-option").click(function () {
            $("#register-option").css("background", "#3fc080");
            $("#login-option").css("background", "#645F88");
            $("#login-form").slideUp(500);
            $("#registration-form").slideDown(500);
        });

        $("#login-option").click(function () {
            $("#login-option").css("background", "#3fc080");
            $("#register-option").css("background", "#645F88");
            $("#registration-form").slideUp(500);
            $("#login-form").slideDown(500);
        });

        // func - get type of sign-in from url (register / login)
        function GetUrlParameter(parameter) {
            var pageUrl = window.location.search.substring(1);
            var urlVar = pageUrl.split('&');
            for (var i = 0; i < urlVar.length; i++) {
                var parameterName = urlVar[i].split('=');
                if (parameterName[0] == parameter) {
                    return decodeURIComponent(parameterName[1]);
                }
            }
        }
        // call function to get ID from url ('register' = 0 / 'login' = 1)
        var signTypeID = GetUrlParameter('id');

        if (signTypeID != 1) {
            $("#login-option").trigger('click');
        } else {
            $("#register-option").trigger('click');
        }

    </script>
</body>
</html>
