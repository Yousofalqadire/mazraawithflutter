                                        <ul class="dropdown-menu animated fadeInUp">
                                            <li><a href="profile.html">Profile</a></li>
                                            <li><a asp-action="Logout" asp-controller="Home" asp-area="default">Logout</a></li>
                                        </ul>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="page-content">
            <div class="row">
                <div class="col-md-2">
                    <div class="sidebar content-box" style="display: block;">
                        <ul class="nav">
                            <!-- Main menu -->
                            <li class="current"><a asp-action="Index" asp-controller="Dashboard"><img src="~/img/Mazaare3_Logo.png" width="170px" alt="Mazaare3_Logo"></a></li>

                            <li class="current"><a asp-action="Index" asp-controller="Dashboard"><i class="glyphicon glyphicon-home"></i> Dashboard</a></li>
                            <li><a asp-action="Index" asp-controller="Ads"><i class="glyphicon glyphicon-calendar"></i>  Ads </a></li>
                            @*  <li><a asp-action="SellAds" asp-controller="Ads"><i class="glyphicon glyphicon-stats"></i> Sell Ads </a></li>*@
                            @*<li><a href="tables.html"><i class="glyphicon glyphicon-list"></i> Tables</a></li>
